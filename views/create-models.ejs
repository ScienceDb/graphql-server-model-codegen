  static async readById(id){
    let item = await <%- nameLc -%>.findByPk(id);
    if (item === null) {
        throw new Error(`Record with ID = "${id}" does not exist`);
    }
    item = <%- nameLc -%>.postReadCast(item)
    return validatorUtil.validateData('validateAfterRead', this, item);
  }

