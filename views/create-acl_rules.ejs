<% let modelsAndAdapters = models.concat(adapters) -%>
module.exports = {
  aclRules: [
    //administrator role permission
    {
      roles: 'administrator',
      allows: [{
        resources: [
<%for( let i=0; i<adminModels.length; i++ ){-%>
          '<%- adminModels[i] _%>',
<%}-%>
        ],
        permissions: '*'
      }]
    },
    
    // model and adapter permissions
    {
      roles: 'editor',
      allows: [{
        resources: [
        <%for( let i=0; i<modelsAndAdapters.length; i++ ){-%>
          '<%- modelsAndAdapters[i] _%>',
        <%}-%>
        ],
        permissions: ['create', 'update', 'delete']
      }]
    },

    {
      roles: 'editor',
      allows: [{
        resources: '<%- models[i].name _%>',
        permissions: 'search'
      }]
    },
    {
      roles: 'reader',
      allows: [{
        resources: [
        <%for( let i=0; i<modelsAndAdapters.length; i++ ){-%>
          '<%- modelsAndAdapters[i] _%>',
        <%}-%>
        ],
        permissions: ['read']
      }]
    },
  ]
}